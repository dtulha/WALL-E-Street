{
  "version": 2,
  "builds": [
    {
      "src": "src/backend/api.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "maxLambdaSize": "50mb",
        "installCommand": "pip install -r requirements.txt --no-deps && pip install uvicorn fastapi",
        "excludeFiles": ["venv/**", "**/__pycache__/**"]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/backend/api.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "PYTHONPATH": "."
  }
} 